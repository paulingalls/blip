<h1>Welcome to BLIP</h1>

<% if current_user.nil? %>
  <%= link_to new_user_session_path, class: 'login-button' do %>Sign in<% end %>
<% else %>
  <h3>Latest Events: </h3>
  <div class="list-group">
  <% @events.each do |event| %>
    <%= link_to(event.name, event_path(event), class: 'list-group-item list-group-item-action' )%>
  <% end %>
    <%= link_to events_path, class: 'list-group-item list-group-item-action' do %>All Events ><% end %>
  </div>

<% end %>